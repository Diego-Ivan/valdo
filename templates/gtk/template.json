{
    "description": "a starter GTK3 app",
    "variables": {
        "PROGRAM_NAME": {
            "summary": "the name of the program",
            "default": "gtkapp",
            "pattern": "^[[:word:]]+$"
        }
    },
    "inputs": [
        "src/App.vala.in",
        "src/MainWindow.vala.in",
        "ui/main-window.ui.in",
        "ui/resources.xml.in",
        "meson.build.in",
        "README.md.in"
    ]
}
